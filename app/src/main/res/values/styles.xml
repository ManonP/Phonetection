<resources>

    <!-- GENERAL ================================================================================-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/action_bar_style</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="android:Theme.DeviceDefault.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ACTION BAR =============================================================================-->
    <style name="action_bar_style" parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <!-- LAYOUTS ================================================================================-->
    <style name="image_layout">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- BOUTONS ================================================================================-->
    <!-- Bouton de dialogue -->
    <style name="dialog_button">
        <item name="android:textColor">@drawable/custom_dialog_button</item>
        <item name="android:background">@drawable/custom_dialog_button_background</item>
        <item name="android:layout_margin">@dimen/dialog_button_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Bouton radio -->
    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_radio_button_text_size</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Bouton de saisie du code pin -->
    <style name="pin_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/custom_dialog_button</item>
        <item name="android:background">@drawable/custom_dialog_button_background</item>
        <item name="android:textSize">@dimen/dial_button_text_size</item>
    </style>

    <style name="pin_clear_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/custom_dialog_button</item>
        <item name="android:background">@drawable/custom_dialog_button_background</item>
        <item name="android:textSize">@dimen/clear_button_text_size</item>
    </style>


    <!-- DIALOGUE ===============================================================================-->
    <!--Separateur entre titre et description | controleur | et boutons de validation-->
    <style name="dialog_separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:background">@color/hint_disable_dark</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <!--Description de la dialogue-->
    <style name="dialog_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_dark_text</item>
        <item name="android:textSize">@dimen/dialog_description_text_size</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- SEEK BAR ===============================================================================-->
    <style name="custom_seek_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
    </style>

    <!-- IMAGES =================================================================================-->
    <style name="image">
        <item name="android:layout_margin">@dimen/image_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- LOCK PATTERN VIEW ======================================================================-->
    <style name="lock_pattern_view" parent="Alp_42447968.Theme.Light">
        <item name="android:color">@color/accent</item>
    </style>

    <!-- CARD VIEW ==============================================================================-->
    <style name="card_view_image">
        <item name="android:layout_width">@dimen/card_view_image</item>
        <item name="android:layout_height">@dimen/card_view_image</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="card_view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/primary_dark_text</item>
        <item name="android:textSize">@dimen/card_view_title_text_size</item>
    </style>

    <style name="card_view_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/secondary_dark_text</item>
        <item name="android:textSize">@dimen/card_view_description_text_size</item>
    </style>
</resources>
